<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >
    <!-- Weather Icon for the hour-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >
        <ImageView
            android:id="@+id/hourIcon"
            android:contentDescription="@string/app_name"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/clouds" />
    </LinearLayout>
    <!-- Temperature for the hour -->
    <TextView
        android:id="@+id/hourTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="5dip"
        android:paddingLeft="0dip"
        android:textSize="25dip"
        android:textStyle="bold"
        android:text="@string/hourTemp"/>
    <!-- City or location for the hour -->
    <TextView
        android:id="@+id/hourQuickForecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hourIcon"
        android:layout_marginLeft="75dip"
        android:layout_centerVertical="true"
        android:paddingBottom ="10dip"
        android:textColor="#040404"
        android:textSize="25dip"
        android:textStyle="bold"
        android:typeface="sans"
        android:text="@string/hourQuickForecast"/>
    <!-- Weather Information for the hour-->
    <TextView
        android:id="@+id/hourTimeAndDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hourQuickForecast"
        android:layout_alignLeft="@+id/hourQuickForecast"
        android:layout_centerHorizontal="true"
        android:textColor="#343434"
        android:textSize="15dip"
        android:text="@string/hourTimeAndDetail"/>
</RelativeLayout>