<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/tripStartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/startTrip_begin_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.bluesierralabs.freewayforecast.Helpers.enterLocation
        android:id="@+id/tripStartAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/tripStartTitle"
        android:layout_alignLeft="@+id/tripEndAddress"
        android:layout_alignStart="@+id/tripEndAddress"
        android:inputType="textPostalAddress|textCapWords"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tripEndTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripStartAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="@string/startTrip_end_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.bluesierralabs.freewayforecast.Helpers.enterLocation
        android:id="@+id/tripEndAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripEndTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPostalAddress|textCapWords"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/tripStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripEndAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/tripDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tripEndTitle"
        android:layout_alignLeft="@+id/tripStartTitle"
        android:layout_alignRight="@+id/tripEndTitle"
        android:layout_alignStart="@+id/tripStartTitle"
        android:layout_below="@+id/tripEndAddress"
        android:layout_marginTop="37dp"
        android:text="@string/startTrip_date_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/startTrip_time_title"
        android:id="@+id/timeTitle"
        android:layout_below="@+id/tripStartDate"
        android:layout_marginTop="32dp"
        android:layout_alignLeft="@+id/tripEndTitle"
        android:layout_alignStart="@+id/tripEndTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/tripTime"
        android:layout_above="@+id/submitTimesAndPlaces"
        android:layout_alignLeft="@+id/tripStartDate"
        android:layout_alignStart="@+id/tripStartDate" />

    <Button
        android:id="@+id/submitTimesAndPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="submitTimesAndPlaces"
        android:text="@string/startTrip_get_directions" />


</RelativeLayout>
